{
  "build": {
    "beforeDevCommand": "pnpm start --port 1420",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist/AIVoiceFactory",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "AI Voice Factory",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.macarron.aivoicefactory",
      "targets": "all",
      "windows": {
        "digestAlgorithm": "sha256",
        "webviewInstallMode": {
          "silent": true,
          "type": "embedBootstrapper"
        },
        "wix": {
          "language": "zh-CN"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "AI语音工厂",
        "width": 800,
        "height": 600
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}
